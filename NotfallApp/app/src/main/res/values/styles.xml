<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Theme for TextLabel email and password in Login -->
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">@dimen/size20</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <!-- Theme for Progressbar in Login -->
    <style name="ProgressdialogLogin" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:text">@color/colorDark</item>
    </style>


</resources>
