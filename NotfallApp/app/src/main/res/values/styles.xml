<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Theme for TextLabel email and password in Login -->
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">@dimen/size20</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <!-- Theme for Buttons in Button bar -->
    <style name="ButtonStyle" parent="android:Widget.ImageButton">
        <item name="background">@color/colorDodgerBlue</item>
    </style>
    <style name="ButtonTheme" parent="">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>
</resources>
