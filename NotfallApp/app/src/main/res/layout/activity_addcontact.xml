<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/menu_bar"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <ImageButton
                android:id="@+id/addpicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/button_bar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/addprofilepicture"
                android:layout_marginTop="10dp"
                android:rotation="360"/>

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/addpicture"
                android:autofillHints="@string/contact_gender"
                android:layout_marginTop="10dp"
                android:prompt="@string/contact_gender"/>

            <EditText
                android:id="@+id/input_firstname"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addpicture"
                android:hint="@string/contact_firstname"
                android:inputType="text"
                android:layout_toEndOf="@+id/spinnerGender"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/input_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_firstname"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:hint="@string/contact_lastname"
                android:inputType="text" />

            <Spinner
                android:id="@+id/spinnerTelNr"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/input_number"
                android:layout_below="@+id/input_email"
                android:layout_marginTop="10dp"
                android:autofillHints="@string/TelNr"/>
            <EditText
                android:id="@+id/input_number"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_email"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:hint="@string/contact_telNr"
                android:inputType="number" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_lastname"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:hint="@string/contact_email"
                android:inputType="textEmailAddress"
                android:autofillHints="@string/contact_email" />

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_number"
                android:autofillHints="@string/language"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/spinnerTimezone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/input_number"
                android:autofillHints="@string/timezone"
                android:layout_toEndOf="@+id/spinnerLanguage"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/spinnerMessage"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_below="@+id/spinnerLanguage"
                android:autofillHints="@string/message"
                android:layout_marginTop="10dp"/>


            <EditText
                android:id="@+id/tvStreet"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerMessage"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:hint="@string/street"
                android:autofillHints="@string/street" />
            <EditText
                android:id="@+id/tvHouseNumber"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerMessage"
                android:layout_toEndOf="@+id/tvStreet"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:hint="@string/housenumber"
                android:autofillHints="@string/housenumber"
                tools:ignore="TextFields" />
            <EditText
                android:id="@+id/tvPostcode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStreet"
                android:inputType="text"
                android:hint="@string/postcode"
                android:layout_marginTop="10dp"
                android:autofillHints="@string/postcode" />
            <EditText
                android:id="@+id/tvPlace"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStreet"
                android:layout_toEndOf="@+id/tvPostcode"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:autofillHints="@string/place" />

            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPostcode"
                android:autofillHints="@string/country"
                android:layout_marginTop="10dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerCountry"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="@string/add" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_add"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="@string/cancel" />

            <include
                layout="@layout/layout_button_sos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btn_cancel"/>

        </RelativeLayout>
</ScrollView>